@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "Sinema Listesi";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Logo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle"
                                 src="@item.Logo"
                                 alt=@item.Name
                                 style="min-width:150px;max-width:150px;height:150px;background-size: cover;">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m=> item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m=> item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Güncelle</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Detay</a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i> Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem","Cinemas")